[color]
  interactive = true
  branch = true
  status = true
[core]
  autocrlf = input
  safecrlf = true
  editor = vim
[commit]
  template = ~/.gitmessage
  verbose = true
[color]
  ui = auto
[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
  newMoved = cyan
  oldMoved = blue
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[mergetool "vimdiff3"]
  cmd = vim -u ~/.vimrc -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[help]
  autocorrect = 1
[push]
  default = upstream
  rebase=true
  followTags = true
[diff]
  colorMoved = zebra
  algorithm = patience
[alias]
  st = status -s
  co = checkout
  lol = log --graph --decorate --oneline
  lola = log --graph --decorate --oneline --all
  df = diff --color --color-words --abbrev
  pu = push origin HEAD
  re = reset --hard origin/HEAD
[includeIf "gitdir:~/dev/"]
  path = ~/dev/.gitconfig
[credential]
	helper = cache
[status]
  showUntrackedFiles = no
[merge]
	tool = vimdiff
