#!/usr/bin/env bash

# ==============================================================================
# = Mac Specific                                                               =
# ==============================================================================

# Update homebrew and other packages
alias clean_os="chmod +x ~/base/mac/.cleanmac; sh ~/base/mac/.cleanmac"

# Recursively delete `.DS_Store` files
alias clean_ds="find . -name '*.DS_Store' -type f -ls -delete"

# Brew specific
alias cask='brew cask'

# Update Packages
alias pack_up=" \
    echo 'Pull latest configs...'; \
    config pull; \
    echo 'Update Homebrew Recipes...'; \
    brew update; \
    brew cask upgrade; \
    echo 'Upgrade and remove outdated formulae'; \
    brew cleanup -s &>/dev/null; \
    echo 'Cleanup Homebrew Cache...'; \
    brew cleanup -s &>/dev/null; \
    rm -rfv $(brew --cache) &>/dev/null; \
    brew tap --repair &>/dev/null; \
    echo 'Update Conda...'; \
    conda update --all; \
    echo 'Update Doom...'; \
    ~/.emacs.d/bin/doom update;"
