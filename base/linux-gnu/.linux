#!/usr/bin/env bash

# Cleanup and update packages
alias clean_os="chmod +x ~/base/linux-gnu/.cleanlinux; sh ~/base/linux-gnu/.cleanlinux"

# Clean up docker
alias clean_docker="chmod +x ~/base/.clean_docker; sh ~/base/.clean_docker"

# Reassign Caplock to Ctrl and ESC
alias cap_ctrl="setxkbmap -option ctrl:nocaps; xcape -e 'Control_L=Escape'"
