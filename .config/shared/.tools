#!/usr/bin/env bash

# mv, rm, cp
alias mv='mv -v'
alias rm='rm -v'
alias cp='cp -v'

# make vim-like
alias :q="exit"
alias :wq="exit"
alias :x="exit"

# kill processes
alias kp="ps -ef | fzf"

# git
alias g="git"
alias gi="git"
alias get="git"
alias got="git"
alias gs="git status"
alias gd="git diff"

# config stored
alias dot='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# clean up docker
alias clean_docker="chmod +x ~/base/.clean_docker; sh ~/base/.clean_docker"

# folder management
alias ls="ls --color=auto"
alias ll="ls -lh"
alias la="ls -lA"
alias mkdir="mkdir -pv"
alias ..="cd .."
alias ...="cd ../../"

# grep
alias grep="grep --color=auto"
